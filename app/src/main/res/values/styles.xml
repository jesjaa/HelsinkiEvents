<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/mainDarkerBlue</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/mainDarkerBlue</item>
        <item name="colorAccent">@color/mainYellow</item>
        <item name="android:colorForeground">@color/mainDarkerBlue</item>
        <item name="android:navigationBarColor">@color/mainDarkBlue</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="MainTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/mainDarkerBlue</item>
        <item name="colorAccent">@color/mainYellow</item>
        <item name="android:colorForeground">@color/mainDarkerBlue</item>
        <item name="android:navigationBarColor">@color/mainDarkBlue</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/mainDarkerBlue</item>
        <item name="colorAccent">@color/mainYellow</item>
        <item name="android:colorForeground">@color/mainDarkerBlue</item>
        <item name="android:navigationBarColor">@color/mainDarkBlue</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>


</resources>
